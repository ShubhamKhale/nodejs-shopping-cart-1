
{{# each products }}
  <div class="row">
    <div class="col-md-12">
      <div class="thumbnail">
        <div class="caption">
          <h3>{{ this.title }}</h3>
           <div class="productIntro">
            <img src="{{ this.ImagePath }}" alt="" id="productImg">
            <div class="productDetails">
              <p>{{ this.tableCon1}}</p>
              <p>{{ this.tableCon2}}</p>
              <p>{{ this.tableCon3}}</p>
              <p>{{ this.tableCon4}}</p>
              <p>{{ this.tableCon5}}</p>
            </div>
           </div>
            <div class="detailsContent">
              <p>{{ this.detail1}}</p>
              <p>{{ this.detail2}}</p>
            </div>
            <p class="description">{{{this.description}}}</p>
            <div class="clearfix">
            <div class="price pull-left"><i class="fa fa-tag" aria-hidden="true"></i>M.R.P &#8377; {{ this.price }}/-</div>
              <a href="/add/{{ this.id }}" class="btn btn-default pull-right addToCart" role="button"><i class="fa fa-shopping-cart" aria-hidden="true"></i> Add to cart</a>
            </div>
        </div>
      </div>
    </div>
  </div>
{{/each}}